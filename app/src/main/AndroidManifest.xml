        <activity
            android:parentActivityName=".Dashboard.SplashActivity"
            android:name=".SignUp.PatientSignUpActivity">
        </activity>

        <activity
            android:parentActivityName=".Dashboard.SplashActivity"
            android:name=".SignUp.SignUpOptionsActivity">
        </activity>

        <activity
            android:parentActivityName=".Dashboard.SplashActivity"
            android:name=".SignUp.DoctorSignUpActivity">
