<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <ImageView
        android:layout_width="278dp"
        android:layout_height="324dp"
        android:layout_gravity="center"
        android:src="@drawable/request_icon">
    </ImageView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">
        <LinearLayout
            android:layout_width="335dp"
            android:layout_height="289dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp" >
    <EditText
        android:id="@+id/patient_name_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Patient Name"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/appointment_reason_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Appointment Reason"
        android:layout_marginTop="10dp"/>

            <Button
                android:id="@+id/request_appointment_button"
                android:layout_width="272dp"
                android:layout_height="58dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/dark_purble"
                android:text="Request Appointment"
                android:textSize="15sp"
                android:textStyle="bold"
                app:cornerRadius="20dp"
                android:layout_marginTop="50dp"/>

</LinearLayout>
</androidx.cardview.widget.CardView>
</LinearLayout>