<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/splashLayoutID"

    android:layout_gravity="center">

    <ImageView
        android:id="@+id/flexLogo"
        android:layout_width="248dp"
        android:layout_height="123dp"
        android:layout_gravity="center"
        android:background="@drawable/flex_logo_2" />

    <ImageView
        android:id="@+id/doctor1ID"
        android:layout_width="335dp"
        android:layout_height="331dp"
        android:layout_gravity="center"
        android:background="@drawable/doctor_1" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="172dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/dark_purble"
        android:text="Login"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/signupBtn"
        android:layout_width="172dp"
        android:layout_height="58dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/dark_purble"
        android:text="Sign Up"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="20dp" />

    <TextView
        android:id="@+id/privacy_policy_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:textColor="@color/dark_purble"
        android:textSize="15dp"
        android:clickable="true"
        android:onClick="openPrivacyActivity"
        android:text="By using the FLEX mobile application, you accept the FLEX Terms of Use. Please also read the FLEX Privacy Policy." />


</LinearLayout>