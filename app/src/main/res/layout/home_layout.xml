<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/homeLayoutID"
    android:background="@color/white"
    android:layout_gravity="center">

    <ImageView
        android:id="@+id/doctorImageID"
        android:layout_width="304dp"
        android:layout_height="353dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/doctor_2" />


    <ImageView
        android:id="@+id/flexLogo"
        android:layout_width="209dp"
        android:layout_height="104dp"
        android:layout_gravity="center"
        android:background="@drawable/flex_logo_2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="225dp"
        android:layout_height="54dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="center_horizontal"
        android:text="Your Partner for Neurogenic Muscle Therapy"
        android:textColor="@color/dark_purble"
        android:textSize="16dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/get_started_button"
        android:layout_width="193dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dark_purble"
        android:text="Get Started"
        android:textSize="18sp"

        app:cornerRadius="25dp" />


</LinearLayout>


