<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"

    tools:context="SignUp.PatientSignUpActivity">


    <ImageView
        android:id="@+id/doctor1ID"
        android:layout_width="195dp"
        android:layout_height="183dp"
        android:layout_gravity="center"
        android:src="@drawable/patient_image" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to FLEX!"
                android:textSize="30sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/dark_purble"/>

            <EditText
                android:id="@+id/patientFullNameID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Full Name"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/patientAgeID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Your Age"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                android:inputType="number"/>

            <EditText
                android:id="@+id/patientEmailSignUpID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Email"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"/>

            <EditText
                android:id="@+id/patientPasswordSignupID"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:padding="8dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:drawablePadding="8dp"
                android:textColor="@color/black"
                android:maxLines="1"
                android:lines="1"
                android:singleLine="true"
                />
<!--            <EditText-->
<!--                android:id="@+id/patientDocNameID"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginTop="10dp"-->
<!--                android:padding="8dp"-->
<!--                android:hint="Your Doctor's name"-->
<!--                android:drawablePadding="8dp"-->
<!--                android:textColor="@color/black"/>-->

            <Button
                android:id="@+id/signupBtnFromPatientSignupLayout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Sign Up"
                android:textSize="18sp"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/dark_purble"
                app:cornerRadius = "25dp"/>

            <TextView
                android:id="@+id/loginRedirectTextFromPatientSignupLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Already have an account? Login"
                android:layout_gravity="center"
                android:padding="5dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/black"
                android:textSize="15sp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>