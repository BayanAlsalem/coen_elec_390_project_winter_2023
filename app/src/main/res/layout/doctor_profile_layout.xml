<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="Dashboard.PatientDashboard"
    >

    <RelativeLayout
        android:layout_width="425dp"
        android:layout_height="139dp"

        android:padding="20dp">

        <ImageView
            android:id="@+id/doc_profile_image"
            android:layout_width="140dp"
            android:layout_height="145dp"
            android:layout_centerVertical="true"
            android:src="@drawable/male_profile_picture" />

        <TextView
            android:id="@+id/fullname_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/doc_profile_image"
            android:text="Bayan Alsalem"
            android:textColor="@color/dark_purble"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/username_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fullname_field"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/doc_profile_image"
            android:includeFontPadding="false"
            android:text="user since March 2023"
            android:textSize="10sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="359dp"
        android:layout_height="590dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MY PROFILE"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/docFullNameID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"

            android:drawablePadding="8dp"
            android:hint="Full Name"
            android:padding="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/hospitalNameID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:drawablePadding="8dp"
            android:hint="Hospital/Clinic name"
            android:padding="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/emailSignUpID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:drawablePadding="8dp"
            android:hint="Email"
            android:padding="8dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/passwordSignupID"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:drawablePadding="8dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="8dp"
            android:textColor="@color/black" />



        <Button
            android:id="@+id/editBtnDoctorID"
            android:layout_width="159dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/dark_purble"
            android:text="Edit"
            android:textSize="20sp"
            app:cornerRadius="20dp" />
        <Button
            android:id="@+id/saveBtnDoctorID"
            android:layout_width="159dp"
            android:layout_height="58dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/dark_purble"
            android:text="save"
            android:textSize="20sp"
            app:cornerRadius="20dp" />

    </LinearLayout>
</LinearLayout>